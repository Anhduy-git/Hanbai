<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PickTypeActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your line of business:"
        android:textColor="@color/f_color"
        android:textSize="19sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"></TextView>
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
        android:layout_marginBottom="10dp">
         <CheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Fashion"
             android:button="@drawable/bg_transparent"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
             android:textSize="16sp"
             android:textColor="@color/f_color"
             android:background="@drawable/custom_checkbox"
             android:layout_marginRight="10dp"></CheckBox>
         <CheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Food"
             android:button="@drawable/bg_transparent"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
             android:textSize="16sp"
             android:textColor="@color/f_color"
             android:background="@drawable/custom_checkbox"
             android:layout_marginRight="10dp"></CheckBox>
         <CheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Medicine"
             android:button="@drawable/bg_transparent"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
             android:textSize="16sp"
             android:textColor="@color/f_color"
             android:background="@drawable/custom_checkbox"
             android:layout_marginRight="10dp"></CheckBox>
         <CheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="E-device"
             android:button="@drawable/bg_transparent"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
             android:textSize="16sp"
             android:textColor="@color/f_color"
             android:background="@drawable/custom_checkbox"
             android:layout_marginRight="10dp"></CheckBox>
     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessory"
            android:button="@drawable/bg_transparent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:textColor="@color/f_color"
            android:background="@drawable/custom_checkbox"
            android:layout_marginRight="10dp"></CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book"
            android:button="@drawable/bg_transparent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:textColor="@color/f_color"
            android:background="@drawable/custom_checkbox"
            android:layout_marginRight="10dp"></CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Houseware"
            android:button="@drawable/bg_transparent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:textColor="@color/f_color"
            android:background="@drawable/custom_checkbox"
            android:layout_marginRight="10dp"></CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:button="@drawable/bg_transparent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:textColor="@color/f_color"
            android:background="@drawable/custom_checkbox"
            android:layout_marginRight="10dp"></CheckBox>
    </LinearLayout>
</LinearLayout>