<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/del_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/attribute_item_name"
        android:background="@drawable/bg_f_color"
        android:drawableLeft="@drawable/close_icon_1"
        android:paddingLeft="1.5dp"
        android:translationX="-13dp"></Button>

    <EditText
        android:id="@+id/attribute_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white_color"
        android:hint="input type"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:textColor="@color/main_color"
        android:textColorHint="@color/th_color"
        android:textCursorDrawable="@null"
        android:textSize="16dp"></EditText>
</RelativeLayout>